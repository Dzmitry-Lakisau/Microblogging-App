<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/list_item_margin"
                android:background="@color/post"
                android:padding="@dimen/activity_vertical_margin">

    <TextView
        android:id="@+id/textView_name_and_surname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        tools:text="Foo Bar"
        />


    <TextView
        android:id="@+id/textView_post_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/textView_name_and_surname"
        tools:text="Date of post"/>

    <TextView
        android:id="@+id/textView_post_body"
        android:layout_width="match_parent"
        android:layout_height="75dp"
        android:layout_below="@id/textView_post_date"
        android:background="@color/post_body"
        tools:text="This is the post body"/>


</RelativeLayout>
